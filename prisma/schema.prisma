// This file is automatically generated by Prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Menu {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Int
  imageUrl    String?
  isAvailable Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Order {
  id             String      @id @default(cuid())
  orderCode      String      @unique
  customerName   String
  notes          String?     // Customer notes/special requests
  items          Json
  totalPrice     Int
  status         OrderStatus @default(PENDING)
  paymentLinkId  String?
  paymentLinkUrl String?
  tableId        Int?
  table          Table?      @relation(fields: [tableId], references: [id])
  takeAway       Boolean     @default(false)
  orderType      String      @default("TAKE_AWAY") // DINE_IN or TAKE_AWAY
  tableNumber    Int?        // Table number for dine-in orders
  // Payment details from Midtrans
  paymentType    String?     // QRIS, bank_transfer, credit_card, etc.
  transactionId  String?     // Midtrans transaction ID
  settlementTime DateTime?   // When payment was completed
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  paymentLogs    PaymentLog[]
  paymentMethod  PaymentMethod @default(TRANSFER) // CASH or TRANSFER
}

model PaymentLog {
  id            String   @id @default(cuid())
  orderId       String
  order         Order    @relation(fields: [orderId], references: [id])
  midtransStatus String
  rawCallback   Json
  createdAt     DateTime @default(now())
}

model Table {
  id        Int         @id @default(autoincrement())
  name      String
  status    TableStatus @default(AVAILABLE)
  orders    Order[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum TableStatus {
  AVAILABLE
  RESERVED
  OCCUPIED
  CLEANING
}

enum OrderStatus {
  PENDING
  SUCCESS
  EXPIRED
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CASH
  TRANSFER
}
